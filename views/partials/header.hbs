<header class="header">
  <nav class="nav container">
    <div class="nav-brand">
      <img src="{{logoUrl}}" alt="TheLuxar Logo" class="logo">
    </div>
    <button class="menu-toggle" aria-label="Toggle navigation" aria-expanded="false">
      <span class="hamburger"></span>
    </button>
    <div class="nav-links">
      {{#each navLinks}}
        <a href="{{url}}" class="nav-link {{#if active}}active{{/if}}">{{text}}</a>
      {{/each}}
    </div>
  </nav>
</header>