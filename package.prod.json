{
  "name": "the-luxar-api",
  "version": "0.0.1",
  "description": "A scalable authentication service",
  "author": "Jospen Wolongwo",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm run prebuild && nest build && npm run copy-assets && webpack --config=public/js/webpack.config.js",
    "start": "node dist/main",
    "start:dev": "npm run prebuild && concurrently \"npm run copy-assets:dev\" \"webpack --config=public/js/webpack.config.js --watch\" \"nest start --watch\"",
    "copy-assets": "copyfiles -u 1 \"views/**/*\" \"dist/views\" && copyfiles -u 1 \"public/**/*\" \"dist/public\"",
    "copy-assets:dev": "nodemon --watch views --watch public -e hbs,css,js --exec \"npm run copy-assets\"",
    "reseed": "ts-node src/database/seeds/reseed.ts",
    "seed:all": "ts-node src/database/seeds/seed.ts",
    "seed:user": "ts-node -e \"require('./src/database/seeds/user.seed').seedUsers(require('./src/database/seeds/utils').initDb())\"",
    "seed:category": "ts-node -e \"require('./src/database/seeds/category.seed').seedCategories(require('./src/database/seeds/utils').initDb())\"",
    "seed:product": "ts-node -e \"require('./src/database/seeds/product.seed').seedProducts(require('./src/database/seeds/utils').initDb())\"",
    "seed:shopping": "ts-node -e \"const utils = require('./src/database/seeds/utils'); const shopping = require('./src/database/seeds/shopping.seed'); const db = utils.initDb(); Promise.resolve(db).then(db => shopping.seedAddresses(db).then(() => shopping.seedCarts(db)).then(() => shopping.seedWishlists(db)).then(() => shopping.seedOrders(db)))\"",
    "seed:clean": "ts-node -e \"(async function() { const db = await require('./src/database/seeds/utils').initDb(); await require('./src/database/seeds/shopping.seed').cleanShopping(db); await require('./src/database/seeds/product.seed').cleanProducts(db); await require('./src/database/seeds/category.seed').cleanCategories(db); await require('./src/database/seeds/user.seed').cleanUsers(db); console.log('All data cleaned successfully!'); })()\"",
    "start:debug": "npm run build && node --inspect-brk dist/main",
    "start:prod": "npm run build && node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "lint-staged": {
    "{src,apps,libs,test}/**/*.{ts}": "eslint --fix",
    "*.{ts,html,scss,yml,md,json,js}": "prettier --write"
  },
  "dependencies": {
    "@nestjs/cache-manager": "^3.0.0",
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.13",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.2",
    "@nestjs/platform-express": "^11.0.13",
    "@nestjs/swagger": "^11.0.2",
    "@nestjs/typeorm": "^11.0.0",
    "@nestlab/google-recaptcha": "^3.8.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/csurf": "^1.11.5",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "cache-manager-redis-yet": "^5.1.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "class-validator-matches": "^1.0.3",
    "cookie-parser": "^1.4.7",
    "csurf": "^1.2.2",
    "handlebars": "^4.7.8",
    "hbs": "^4.2.0",
    "ncsrf": "^1.1.0",
    "nest-mailjet": "^0.3.0",
    "nestjs-pino": "^4.2.0",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.13.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^11.0.13",
    "@types/express": "^4.17.17",
    "@types/handlebars": "^4.1.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^9.1.2",
    "copyfiles": "^2.4.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.2",
    "jest": "^29.5.0",
    "lint-staged": "^15.4.3",
    "nodemon": "^3.1.9",
    "prettier": "^3.0.0",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
