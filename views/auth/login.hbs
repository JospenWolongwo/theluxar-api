{{#extend "main"}}
  {{#content "body"}}
    <div class="auth-form">
      <div class="auth-header">
        <img src="{{header.logoUrl}}" alt="Logo" class="auth-logo">
        <h2>{{title}}</h2>
        <p>{{subtitle}}</p>
      </div>

      <form action="{{loginUrl}}" method="POST" class="auth-form-content">
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <div class="form-group">
          <label for="email">Email Address</label>
          <input 
            type="email" 
            id="email" 
            name="email" 
            required 
            class="form-control"
            placeholder="Enter your email"
            autocomplete="username"
          >
        </div>

        <div class="form-group">
          <div class="password-header">
            <label for="password">Password</label>
            <a href="{{forgotPasswordUrl}}" class="text-link">Forgot password?</a>
          </div>
          <div class="password-input-container">
            <input 
              type="password" 
              id="password" 
              name="password" 
              required 
              class="form-control"
              placeholder="Enter your password"
              autocomplete="current-password"
            >
            <button type="button" class="password-toggle" aria-label="Toggle password visibility">
              <svg class="toggle-icon" viewBox="0 0 24 24" width="20" height="20">
                <!-- Eye (visible) -->
                <path class="eye" fill="currentColor" d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"/>
                <!-- Eye-slash (hidden) -->
                <path class="eye-slash" fill="currentColor" d="M12 7c2.76 0 5 2.24 5 5 0 .65-.13 1.26-.36 1.83l2.92 2.92c1.51-1.26 2.7-2.89 3.43-4.75-1.73-4.39-6-7.5-11-7.5-1.4 0-2.74.25-3.98.7l2.16 2.16C10.74 7.13 11.35 7 12 7zM2 4.27l2.28 2.28.46.46C3.08 8.3 1.78 10.02 1 12c1.73 4.39 6 7.5 11 7.5 1.55 0 3.03-.3 4.38-.84l.42.42L19.73 22 21 20.73 3.27 3 2 4.27zM7.53 9.8l1.55 1.55c-.05.21-.08.43-.08.65 0 1.66 1.34 3 3 3 .22 0 .44-.03.65-.08l1.55 1.55c-.67.33-1.41.53-2.2.53-2.76 0-5-2.24-5-5 0-.79.2-1.53.53-2.2zm4.31-.78l3.15 3.15.02-.16c0-1.66-1.34-3-3-3l-.17.01z"/>
              </svg>
            </button>
          </div>
        </div>

        <!-- reCAPTCHA -->
        {{#if key}}
          <input type="hidden" name="g-recaptcha-response" id="g-recaptcha-response">
        {{/if}} 

        <button type="submit" class="btn btn-primary">
          <span class="btn-content">Continue</span>
          <span class="btn-loader"></span>
        </button>

        <div class="auth-divider">
          <span>or</span>
        </div>

        <!-- Social Login Buttons -->
        <div class="social-login">
          <a href="{{googleAuthUrl}}" class="btn btn-google">
            <img src="/images/google-icon.svg" alt="Google Icon" class="social-icon">
            Continue with Google
          </a>
          <a href="{{facebookAuthUrl}}" class="btn btn-facebook">
            <img src="/images/facebook-icon.svg" alt="Facebook Icon" class="social-icon">
            Continue with Facebook
          </a>
        </div>
        <div class="auth-footer">
          <p>Don't have an account? 
            <a href="{{signUpUrl}}" class="text-link">Create account</a>
          </p>
        </div>
      </form>
    </div>
  {{/content}}
{{/extend}}